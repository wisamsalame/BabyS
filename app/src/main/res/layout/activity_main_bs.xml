<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backglog"
    tools:context=".signinBS">

    <Space
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|center_horizontal">

        <Button
            android:id="@+id/btn_signin_BS"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/mbtn"
            android:fontFamily="@font/tch"
            android:text="@string/signinbtn"
            android:textSize="32dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/btn_register_BS"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/mbtn"
            android:fontFamily="@font/tch"
            android:text="@string/registerbtn"
            android:textSize="32dp" />
    </LinearLayout>

</android.widget.LinearLayout>